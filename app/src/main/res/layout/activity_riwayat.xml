<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    android:padding="15dp"
    tools:context=".riwayat">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="210dp"
            app:cardCornerRadius="15dp"
            app:cardElevation="5dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/riwayat"
                    android:text="Riwayat Periksa Pasien"
                    android:textSize="20dp"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:textColor="@color/purple_500"
                    android:background="@drawable/color"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/nama"
                    android:textColor="@color/black"
                    android:text="Nama Bunda"
                    android:layout_marginLeft="16dp"
                    android:layout_below="@+id/riwayat"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/usia"
                    android:textColor="@color/black"
                    android:text="Usia Kehamilan"
                    android:layout_marginLeft="16dp"
                    android:layout_below="@+id/nama"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/bb"
                    android:textColor="@color/black"
                    android:layout_marginLeft="16dp"
                    android:text="Berat Badan Bunda"
                    android:layout_below="@+id/usia"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/tb"
                    android:layout_marginLeft="16dp"
                    android:textColor="@color/black"
                    android:text="Tinggi Badan Bunda"
                    android:layout_below="@+id/bb"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/tekanan"
                    android:textColor="@color/black"
                    android:layout_marginLeft="16dp"
                    android:text="Tekanan Darah"
                    android:layout_below="@+id/tb"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/beratjanin"
                    android:textColor="@color/black"
                    android:layout_marginLeft="16dp"
                    android:text="Berat Janin"
                    android:layout_below="@+id/tekanan"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/panjangjanin"
                    android:textColor="@color/black"
                    android:text="Panjang Janin"
                    android:layout_marginLeft="16dp"
                    android:layout_below="@+id/beratjanin"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/detak"
                    android:layout_marginLeft="16dp"
                    android:textColor="@color/black"
                    android:text="Detak Jantung Janin"
                    android:layout_below="@+id/panjangjanin"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/obat"
                    android:layout_marginLeft="16dp"
                    android:textColor="@color/black"
                    android:text="Obat yang dikonsumsi"
                    android:layout_below="@+id/detak"/>




            </RelativeLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
