<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".profil">

    <TextView
        android:id="@+id/Tnamauser"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="Nama"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="25dp"
        android:layout_marginLeft="15dp"/>

    <EditText
        android:id="@+id/editnamauser"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:background="@drawable/editprofil"
        android:padding="3dp"
        android:inputType="text"
        android:layout_marginTop="15dp"
        android:layout_toRightOf="@+id/Tnamauser"/>

    <TextView
        android:id="@+id/Tusername"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="Username"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginBottom="25dp"
        android:layout_marginLeft="15dp"
        android:layout_below="@+id/Tnamauser"/>

    <EditText
        android:id="@+id/editusername"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:background="@drawable/editprofil"
        android:padding="3dp"
        android:inputType="text"
        android:layout_marginTop="65dp"
        android:layout_toRightOf="@+id/Tusername"/>

    <TextView
        android:id="@+id/Tpassword"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="Password"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginLeft="15dp"
        android:layout_below="@+id/Tusername"/>

    <EditText
        android:id="@+id/editpassword"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:background="@drawable/editprofil"
        android:padding="3dp"
        android:inputType="text"
        android:layout_marginTop="115dp"
        android:layout_toRightOf="@+id/Tpassword"/>

    <Button
        android:id="@+id/simpan"
        android:layout_width="120dp"
        android:layout_height="30dp"
        android:text="Simpan Profil"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="170dp"
        android:textSize="10sp"
        android:textColor="@color/white"
        android:background="@color/purple_200" />

</RelativeLayout>