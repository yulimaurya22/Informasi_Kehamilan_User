<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".profilFragment">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="@drawable/gradient"></RelativeLayout>

    <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="Profil"
        android:textColor="#FFFFFF"
        android:textAlignment="center"
        android:textSize="35dp"
        android:textStyle="bold" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="510dp"
        android:layout_marginTop="250dp"
        android:background="@drawable/color">
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="140dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="250dp"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardCornerRadius="20dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@color/white">


                <TextView
                    android:id="@+id/txnamauser"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:text="Nama              :"

                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="25dp"
                    android:layout_marginLeft="15dp"/>

                <TextView
                    android:id="@+id/namauser"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:hint="Nama"
                    android:padding="3dp"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_toRightOf="@+id/txnamauser"/>

                <View
                    android:layout_width="310dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="5dp"
                    android:layout_height="1dp"
                    android:background="#A4989898"
                    android:layout_below="@+id/namauser"/>

                <TextView
                    android:id="@+id/txusername"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:text="Username      :"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="25dp"
                    android:layout_marginLeft="15dp"
                    android:layout_below="@+id/txnamauser"/>

                <TextView
                    android:id="@+id/username"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="65dp"
                    android:hint="username"
                    android:padding="3dp"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_toRightOf="@+id/txusername"/>

                <View
                    android:layout_width="310dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="5dp"
                    android:layout_height="1dp"
                    android:background="#B57C7C7C"
                    android:layout_below="@+id/username"/>


                <TextView
                    android:id="@+id/txpassword"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:text="Password       :"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginLeft="15dp"
                    android:layout_below="@+id/txusername"/>

                <TextView
                    android:id="@+id/password"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="115dp"
                    android:hint="password"
                    android:padding="3dp"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_toRightOf="@+id/txpassword"/>

                <View
                    android:layout_width="310dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="5dp"
                    android:layout_height="1dp"
                    android:background="#B57C7C7C"
                    android:layout_below="@+id/password"/>


            </RelativeLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>


    <Button
        android:id="@+id/logout"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:text="Logout"
        android:layout_marginLeft="220dp"
        android:layout_marginTop="530dp"
        android:textSize="15sp"
        android:textColor="@color/white"
        android:background="@color/purple_200" />

    <Button
        android:id="@+id/edit"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:text="Edit Profil"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="530dp"
        android:textSize="15sp"
        android:textColor="@color/white"
        android:background="@color/purple_200" />






</FrameLayout>